<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title: 'Administracion'}) %>
  

  
<body class="bg-light">
  <%- include('./partials/header') %> 
<main class="container"> <%/* centra  */%>
<div class="row"> <%/* agrega flex */%>
  <div class="col-12 col-lg-12 mx-auto"> <%/* las columnas que va a ocupa y un margen automatico para que se despegue */%>
    <div class="card shadow mt-5">
      <div class="card-header">
        <div class="row">
          <div class="col-12 col-md-2">
            <%= title %> 
          </div>
          <div class="col-12 col-md-4">
            <form class="row" action="/products/search" method="GET">
              <div class="col-9">
                <input type="text" class="form-control" name="search" placeholder="Buscar producto">
              </div>
          
              <button class="col-3 btn bnt-outline-primary" type="submit">Buscar</button>
            </form>
            </div>
            <div class="col-12 col-md-4">
            <form class="row" action="/products/filter" method="GET">
              <div class="col-9">
                <select name="category" class="form-select">
                  <option value="" selected hidden>Filtrar por...</option>
                  <% categories.forEach(category => { %>
                   <option value="<%= category %>"><%= category %></option>
                  <% }) %>
                </select>
              </div>
              <button class="col-3 btn bnt-outline-primary" type="submit">Filtrar</button>
            </form>
            </div>
<div class="col-12 col-md-2 text-end">
  <div>
    <a class="btn btn-primary" href="/products/add">Agregar</a>
  </div>
</div>
         </div>
        </div>
       
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Imagen</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Descuento</th>
              <th scope="col">Categor√≠a</th>
              <th scope="col">Acciones</th>
              
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product,index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %>  </th>
                <td> <img width="100" src="/images/<%= product.image%>" alt=""></td>
                <td><%=product.name %> </td>
                <td><%=product.price %> </td>
                <td><%= product.discount%></td>
                <td><%= product.category%></td>
                <td class="d-flex justify-content-around"> 
                  <a href="/products/destroy/<%= products.id %>" class="btn btn-sm btn-success" style="width: 35px"><i class="fas fa-edit"></i></a>
                 <div>
                   <form action="/products/destroy/<%= product.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger" style="width: 35px"><i class="fas fa-trash"></i></button>
                   </form>
                 </div>                
                </td>               
              </tr>
            <% }) %>            
          </tbody>
        </table>
      </div>
    </div>
   


  </div>
</div>

</main>


    <%- include('./partials/scripts') %> 
</body>
</html>