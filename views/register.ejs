<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head', {title: 'Registro de usuario'}) %> 
<body class="register">
    <%- include('./partials/header') %> 
    <main>
        <div class="formulario">
            <h2>REGISTRATE</h2>
            <form action="" method="POST">
                <div class="box-form">
                    <label for="nombre">Nombre</label>
                    <input type="text" placeholder="tu nombre" id="name" name="name">
                    <span class="error"></span>
                </div>
                <div class="box-form">
                    <label for="email">Email</label>
                    <input type="email" placeholder="tu email" id="email" name="email">
                    <span class="error"></span>
                </div>
                <div class="box-form">
                    <label for="password">Contraseña</label>
                    <input type="password" placeholder="tu contraseña" id="password" name="password">
                    <span class="error"></span>
                </div>                
                    <div class="check-box-all">
                        <div class="box-check">
                            <input type="checkbox" name="terms" id="terms">
                            <label for="terms">Acepto términos y condiciones</label>
                        </div>
                    </div>
                    <div class="box-button">
                        <button type="submit">Registrarme</button>
                        <button type="reset">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
       
    </main>
    <%- include('./partials/scripts') %> 
</body>
</html>